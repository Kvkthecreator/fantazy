# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,https://your-app.vercel.app

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_JWKS_ISSUER=your_supabase_url/auth/v1
SUPABASE_JWKS_URL=your_supabase_url/auth/v1/keys
SUPABASE_JWT_AUD=authenticated

# PDF Ingestion Configuration
ALLOWED_PUBLIC_BASE=https://your-bucket.supabase.co/storage/v1/object/public/
PDF_MAX_BYTES=20000000
CHUNK_LEN=30000
FETCH_TIMEOUT_SECONDS=20

# Feature Flags
NARRATIVE_JOBS_ENABLED=false

# Security
JWT_SECRET=your_jwt_secret

# Database
DATABASE_URL=postgresql://user:password@localhost/dbname

# ── LLM Configuration ─────────────────────────────────────────────────
# Chat uses Gemini by default. Set these to override:
# LLM_PROVIDER=google          # Options: google, openai, anthropic, openrouter
# LLM_MODEL=gemini-2.0-flash   # Model name for chosen provider

# API Keys (set the one for your chosen provider)
GOOGLE_API_KEY=your_google_api_key
# OPENAI_API_KEY=your_openai_key
# ANTHROPIC_API_KEY=your_anthropic_key

# Worker embeddings (always uses OpenAI for consistency)
OPENAI_API_KEY=your_openai_key

# ── Lemon Squeezy (Payments & Subscriptions) ─────────────────────────────
# Get these from your Lemon Squeezy dashboard
LEMONSQUEEZY_API_KEY=your_lemonsqueezy_api_key
LEMONSQUEEZY_STORE_ID=your_store_id
LEMONSQUEEZY_WEBHOOK_SECRET=your_webhook_secret

# Subscription product variant ID (Fantazy Premium)
LEMONSQUEEZY_VARIANT_ID=your_subscription_variant_id

# Top-up pack variant IDs (one-time purchases)
TOPUP_STARTER_VARIANT_ID=744343d2-8865-49ac-b025-4e14ebb3876a
TOPUP_POPULAR_VARIANT_ID=549e55b2-6067-4491-8f91-ad9e03d6b705
TOPUP_BESTVALUE_VARIANT_ID=53a17e4e-0d2b-4588-a31f-414ea2a8fa5a

# Checkout redirect URL (after successful payment)
CHECKOUT_SUCCESS_URL=https://fantazy.app/settings?tab=billing
